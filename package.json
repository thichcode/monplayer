{
  "name": "monplayer",
  "version": "1.0.0",
  "description": "Modern IPTV Player",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg server.js --output monplayer.exe --targets node18-win-x64",
    "build-all": "pkg server.js --output monplayer --targets node18-win-x64,node18-linux-x64,node18-macos-x64"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pkg": "^5.8.1"
  },
  "keywords": [
    "iptv",
    "player",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "pkg": {
    "assets": [
      "index.html",
      "style.css", 
      "script.js",
      "config.json",
      "package.json"
    ]
  }
}
